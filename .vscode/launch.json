{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm.cmd",
            "runtimeArgs": [
                "run-script",
                "start",
                "--",
                "--inspect-brk=9229"
            ],
            "port": 9229
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Client [3000]",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Storybook [9001]",
            "url": "http://localhost:9001",
            "webRoot":  "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server.bundle Webpack",
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--mode", "development",
                "--config", "${workspaceFolder}/server.bundle/server.bundle.webpack.config.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server [3001]",
            "cwd": "${workspaceFolder}/build.server",
            "program": "${workspaceFolder}/build.server/index.js",
            "runtimeArgs": [
                "-r", "source-map-support/register"
            ],
            "env": {
                "NODE_ENV": "development",
            },
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMapPathOverrides": {
              "webpack:///./~/*": "${workspaceRoot}/node_modules/*",
              "webpack:///./*": "${workspaceRoot}/*",
              "webpack:///*": "*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "docker-do build",
            "program": "${workspaceFolder}/scripts/docker-do.js",
            "args": [
                "build"
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "docker-do run",
            "program": "${workspaceFolder}/scripts/docker-do.js",
            "args": [
                "run"
            ],
        },
        
    ]
}